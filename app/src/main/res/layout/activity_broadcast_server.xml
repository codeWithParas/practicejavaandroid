<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_broadCast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="20sp"
        android:text="BroadCast is Registered from here inside onCreate Method\nThe same broadcast then received by same activiy class."/>


    <Button
        android:id="@+id/show_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show received broadcast"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/send_broadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send YOur broadcast"
        android:layout_gravity="center"/>

</LinearLayout>